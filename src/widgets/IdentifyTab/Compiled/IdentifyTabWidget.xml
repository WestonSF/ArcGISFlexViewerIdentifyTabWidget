<?xml version="1.0" ?>

<configuration>	
	<geometryServiceURL>http://tasks.arcgisonline.com/ArcGIS/rest/services/Geometry/GeometryServer</geometryServiceURL>

	<!-- Info Window style -->
	<windowheight>240</windowheight>
	<windowwidth>320</windowwidth>
	<windowalpha>0.8</windowalpha>	
	<windowtitle>Information</windowtitle>	

	<relateButtonLabel>Show Related Information</relateButtonLabel>
	<selectButtonLabel>Select by Feature</selectButtonLabel>
	<selectFeatureMapService>http://sampleserver3.arcgisonline.com/ArcGIS/rest/services/Fire/Sheep/FeatureServer/0</selectFeatureMapService> <!-- Map service layer to use for selection -->
	
	<relateID>0</relateID> <!-- The ID of the relationship setup on the map service, NOTE: ALL Map Services will use this ID -->
			
	<hyperlinks> <!-- List of hyperlinks to use in popups -->	
		<hyperlink>
			<layername></layername> <!-- Name of the layer to include hyperlink in. This is the name of the layer in the map service -->
			<variable></variable> <!-- The field name, which will be inserted into hyperlink -->
			<link></link> <!-- The hyperlink with above variable inserted -->
			<linkName></linkName> <!-- The hyperlink text to show in popup -->
		</hyperlink>
		<hyperlink>
			<layername></layername>
			<variable></variable>
			<link></link>
			<linkName></linkName>
		</hyperlink>		
	</hyperlinks>		
			
	<!-- Map service details -->
	<mapservices>
		<mapservice>
			<url>http://server.arcgisonline.com/ArcGIS/rest/services/Demographics/USA_Median_Household_Income/MapServer</url> <!-- Map service URL -->
			<layername>Demographics</layername> <!-- The name of the map service specified in the main config file -->
			<identifyLayers>1,2,3,4</identifyLayers> <!-- The layers in the map service to include in the identify -->
			<removeFields>SHAPE,OBJECTID,SHAPE.STLength(),SHAPE.STArea()</removeFields>	<!-- The fields to exclude from ALL layers in the map service -->
			<defaulttab></defaulttab> <!-- Which layer tab will be selected by default -->	
		</mapservice>
	</mapservices>		
</configuration>
